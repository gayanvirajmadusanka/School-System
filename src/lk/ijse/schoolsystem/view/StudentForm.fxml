<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.schoolsystem.controller.StudentForm">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="162.0" layoutY="38.0" prefHeight="51.0"
               prefWidth="278.0" text="School System">
            <font>
                <Font name="System Bold" size="35.0"/>
            </font>
        </Label>
        <Button layoutX="430.0" layoutY="152.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="25.0"
                prefWidth="79.0" text="Delete"/>
        <Button layoutX="316.0" layoutY="152.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="25.0"
                prefWidth="94.0" text="Update"/>
        <Button layoutX="103.0" layoutY="152.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="25.0"
                prefWidth="79.0" text="Save"/>
        <TableView fx:id="tbl" layoutY="200.0" prefHeight="200.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="ID"/>
                <TableColumn fx:id="colName" prefWidth="184.0" text="Name"/>
                <TableColumn fx:id="colAddress" prefWidth="249.0" text="Address"/>
                <TableColumn fx:id="colAge" prefWidth="91.0" text="Age"/>
            </columns>
        </TableView>
        <TextField fx:id="txtId" layoutX="23.0" layoutY="101.0" onAction="#txtStudentIdOnACtion" prefHeight="25.0"
                   prefWidth="79.0" promptText="Student ID"/>
        <TextField fx:id="txtName" layoutX="113.0" layoutY="101.0" prefHeight="25.0" prefWidth="107.0"
                   promptText="Student Name"/>
        <TextField fx:id="txtAddress" layoutX="236.0" layoutY="101.0" prefHeight="25.0" prefWidth="202.0"
                   promptText="Student Address"/>
        <TextField fx:id="txtAge" layoutX="454.0" layoutY="101.0" prefHeight="25.0" prefWidth="134.0"
                   promptText="Student Age"/>
        <Button layoutX="200.0" layoutY="152.0" mnemonicParsing="false" onAction="#btnSearchOnAction" prefHeight="25.0"
                prefWidth="94.0" text="Search"/>
    </children>
</AnchorPane>
